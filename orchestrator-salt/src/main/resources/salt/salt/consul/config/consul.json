{
  {% if is_server %}"bootstrap_expect": {{ bootstrap_expect }},
  "server": true,
  "ui": true, {% endif %}
  "data_dir": "/opt/consul",
  "client_addr": "0.0.0.0",
  "disable_update_check": true,
  "retry_join": {{ retry_join | json }},
  "addresses": {
    "dns": "127.0.0.1"
  },
  "ports": {
    "dns": 953,
    "http": 8500,
    "https": -1
  },
  "dns_config": {
    "allow_stale": true,
    "max_stale": "5m",
    "node_ttl": "1m"
  },
  "node_name": "{{ node_name }}"
}
